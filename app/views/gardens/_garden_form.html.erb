<%= simple_form_for @garden do |f|%>
  <%= f.input :title, label: "Titolo", autofocus: true %>
  <%= f.input :description, label: "Descrizione" %>
  <%= f.input :photo, label: "Foto", accept: 'image/gif, image/jpg, image/png' %>
  <%= f.button :submit, "Salva", class: "btn btn-success" %>
  <%= link_to "Annulla", gardens_path, class: "btn btn-outline-secondary", data: { confirm: "Se lasci questa pagina senza pubblicare perderai il lavoro svolto" } %>
<% end %>
