<%= simple_form_for @plant do |f| %>
  <%= f.input :name, label: "Nome",  required: true, autofocus: true %>
  <%= f.input :photos, label: "Foto", as: :attachinary %>
  <%= f.input :description, label: "Descrizione", class: "text-field-height", input_html: { rows: 7} %>
  <%= f.input :category, label: "Tipologia",  placeholder: "erbacee perenni/erbacee annuali/graminacee/altro" %>
  <%= f.input :esposizione, label: "Esposizione/Esigenza", placeholder: "Esigenza: sole/ombra/mezz'ombra/secco" %>
  <%= f.input :fioritura, placeholder: "stagione"%>
  <%= f.input :utile_per, placeholder: "Esempi: fogliame decorativo/da taglio/coprisuolo/farfalle e insetti" %>
  <%= f.input :altezza, placeholder:'Bassa, Media, Alta e cm'%>
  <%= f.input :terreno %>
  <%= f.input :densità %>
  <%= f.input :vaso %>
  <%= f.input :prezzo, placeholder: "0.00" %>
  <%= f.input :disponibile, label: "Disponibile?" %>
  <%= f.input :novità, label: "Novità" %>
  <%= f.input :nascondi %>
  <%= f.button :submit, "Salva", class: "btn btn-success btn-block" %>
<% end %>
<%= link_to "Annulla", plants_path, class: "btn btn-mine btn-block" %>
