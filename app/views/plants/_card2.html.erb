<div class="column-center">
  <div class="plant-card2">
  <div>
      <div class="card2-photo">
        <% if plant.photos.empty? %>
          <%= image_tag "Logo_2.png" %>
        <% else %>
          <% plant.photos.each do |photo| %>
            <%= cl_image_tag photo.path %>
          <% end %>
        <% end %>
        <%= link_to "", plant_path(plant), class: "card2-link"%>
      </div>
      <div class="card2-plant-name">
        <h1><%= plant.name %></h1>
      </div>
    </div>
    <div class="card2-content">
      <div class="card2-info">
        <p><strong>Categoria:</strong> <%= plant.category %></p>
        <p><strong>Esposizione:</strong> <%= plant.esposizione %></p>
        <p><strong>Fioritura:</strong> <%= plant.fioritura %></p>
        <p><strong>Altezza:</strong> <%= plant.altezza %></p>

        <div class="other-card-links" style="font-weight:bold;">
          <%= link_to "Vedi di piÃ¹", plant_path(plant), class: "other-card-links bold"%>
        </div>
      </div>
        <hr>
      <div class="card2-button">
        <p>
          <%= humanized_money_with_symbol plant.prezzo %>
          <% if plant.disponibile? %>
            <span class="small-caps text-success">disponibile</span>
          <% else %>
            <span class="small-caps text-danger">non disponibile</span>
          <% end %>
        </p>
        <% if plant.disponibile? %>
          <%= form_for @line_item do |f| %>
            <%= f.hidden_field :plant_id, value: plant.id %>
            <%= f.number_field :quantity, value: 1, class: "small-field" %>
            <%= f.submit 'Aggiungi', class: 'btn btn-purple' %>
          <% end %>
        <% else %>
          <%= button_to 'Aggiungi', line_items_path(plant_id: plant), class: 'btn btn-purple disabled' %><%= link_to "", plant_path(plant), class: "card2-link"%>
        <% end %>
      </div>

    </div>
  </div>
</div>
