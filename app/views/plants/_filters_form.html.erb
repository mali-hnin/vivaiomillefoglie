<!-- Filters -->
<%= form_with(url: plants_path, method: :get, remote: true) do |f| %>
  <div class="catalogo-filters-grid">
    <div class="catalogo-filters-content"><%= f.select :category, Plant.options_for_category, include_blank: true, prompt: "Categoria", class: "form-select"  %></div>
    <div class="catalogo-filters-content"><%= f.select :esposizione, Plant.options_for_esposizione, include_blank: true, prompt: "Esposizione"  %></div>
    <div class="catalogo-filters-content"><%= f.select :fioritura, Plant.options_for_fioritura, include_blank: true, prompt: "Fioritura" %></div>
    <div class="catalogo-filters-content"><%= f.select :altezza, Plant.options_for_altezza, include_blank: true, prompt: "Altezza" %></div>
    <div class="catalogo-filters-content"><%= f.select :funzione, Plant.options_for_funzione, include_blank: true, prompt: "Funzione"  %></div>
    <div class="catalogo-filters-content"><%= f.submit 'Filtra', class: "btn btn-primary" %>
      <%= link_to('Resetta filtri', plants_path ) %></div>
  </div>
<% end %>
<!-- End of Filters -->