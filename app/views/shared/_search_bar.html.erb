<div class="">
	<%= form_tag plants_path, method: "get" do %>
		<div class="input-group">
			<div class="search-bar">
				<%= text_field_tag :search, params[:search], placeholder: "Cerca una pianta", class: 'searchTerm search-element', remote: true %>
