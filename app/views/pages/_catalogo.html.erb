<div class="page-wrapper white-bg">
	<% if user_signed_in? && current_user.admin %>
		<!-- Admin Panel -->
		<%= render 'plants/admin_panel_main' %>
		<!-- End of Admin Panel -->
	<% end %>
	<div class="catalogo-content text-center">
		<div class="catalogo-banner">
			<h1 lass="text-center">Catalogo</h1>
			<h3><%= link_to "Vedi tutte le piante", plants_path, class: "orange-text" %></h3>
			<div style="margin: 30px 20px">
				<%= render 'shared/search_bar' %>
			</div>
		</div>
		<div class="content">
			<div class="row">
				<div class="categorie-row">
					<div class="col-xs-12 col-lg-3">
						<div class="categoria-header">
							Tipo di piante
						</div>
						<div class="categoria-content">
							<%= link_to "Erbacee perenni", erbacee_perenni_plants_path %>
							<%= link_to "Erbacee annuali", erbacee_annuali_plants_path %>
							<%= link_to "Graminacee", graminacee_plants_path %>
							<%= link_to "Alberi", alberi_plants_path %>
							<%= link_to "Arbusti", arbusti_plants_path %>
							<%= link_to "Rampicanti", rampicanti_plants_path %>
						</div>
					</div>
					<div class="col-xs-12 col-lg-3">
						<div class="categoria-header">
							Esposizione
						</div>
						<div class="categoria-content">
							<%= link_to "Sole", esposizione_sole_plants_path %>
							<%= link_to "Ombra", esposizione_ombra_plants_path %>
						</div>
					</div>
					<div class="col-xs-12 col-lg-3">
						<div class="categoria-header">
							Caratteristiche
						</div>
						<div class="categoria-content">
							<div id="categoria-accordion" data-children=".item">
								<div class="item spacing-5">
									<a data-toggle="collapse" data-parent="#categoria-accordion" href="#categoria-accordion2" role="button" aria-expanded="false" aria-controls="categoria-accordion2">
										Stagione della fioritura <i class="fa fa-angle-down" aria-hidden="true"></i>
									</a>
									<div id="categoria-accordion2" class="collapse" role="tabpanel">
										<ul class="mb-3 accordion-menu">
											<li><%= link_to "Primavera", fioritura_primavera_plants_path, class: "" %></li>
											<li class="white"><%= link_to "Estate", fioritura_estate_plants_path, class: "" %></li>
											<li><%= link_to "Autunno", fioritura_autunno_plants_path, class: "" %></li>
											<li class="white"><%= link_to "Inverno", fioritura_inverno_plants_path, class: "" %></li>
										</ul>
									</div>
								</div>
								<div class="item spacing-5">
									<a data-toggle="collapse" data-parent="#categoria-accordion" href="#categoria-accordion3" role="button" aria-expanded="false" aria-controls="categoria-accordion3">
										Altezza <i class="fa fa-angle-down" aria-hidden="true"></i>
									</a>
									<div id="categoria-accordion3" class="collapse" role="tabpanel">
										<ul class="mb-3 accordion-menu">
											<li><%= link_to "Basse", altezza_bassa_plants_path, class: "" %></li>
											<li class="white"><%= link_to "Medie", altezza_media_plants_path, class: "" %></li>
											<li><%= link_to "Alte", altezza_alta_plants_path, class: "" %></li>
										</ul>
									</div>
								</div>
							</div>
							<%= link_to "Fogliame ornamentale", fogliame_ornamentale_plants_path %>
							<%= link_to "Fiori da taglio", da_taglio_plants_path %>
						</div>
					</div>
					<div class="col-xs-12 col-lg-3">
						<div class="categoria-header">
							Interesse per l'ambiente
						</div>
						<div class="categoria-content">
							<%= link_to "Piante coprisuolo", coprisuolo_plants_path %>
							<%= link_to "Piante azotofissatrici", azotofissatrici_plants_path %>
							<%= link_to "Piante utili per insetti e uccelli", insetti_e_uccelli_plants_path %>
							<%= link_to "Piante con poche esigenze di irrigazione", da_secco_plants_path %>
							<%= link_to "Piante spontanee", spontanee_plants_path %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
